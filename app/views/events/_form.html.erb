<% if @event.errors.any? %>
  <ul>
    <% @event.errors.full_messages.each do |m| %>
      <li><%= m %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@event) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  <br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>

<% end %>

