<h1> Events </h1>
<%= link_to 'new', new_event_path %>
<table class='table'>
  <thead>
    <tr>
      <td>name</td>
      <td>description</td>
      <td colspan=3></td>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |e| %>
      <tr>
        <td><%= e.name %></td>
        <td><%= e.description %></td>
        <td><%= link_to 'edit', edit_event_path(e) %></td>
        <td><%= link_to 'delete', event_path(e), method: :delete, data: {confirm: 'Are your sure?'} %></td>
      </tr>
    <% end %>
    <tbody>
</table>
